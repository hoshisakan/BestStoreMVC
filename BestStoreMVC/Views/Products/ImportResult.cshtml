@{
    ViewData["Title"] = "Import Result";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Import Result</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ImportSuccess"] != null)
                    {
                        <div class="alert alert-success">
                            <h5>匯入結果：</h5>
                            <p>@TempData["ImportSuccess"]</p>
                        </div>
                    }

                    @if (TempData["ImportErrors"] != null && TempData["ImportErrors"] is List<string> errors && errors.Any())
                    {
                        <div class="alert alert-warning">
                            <h5>匯入錯誤：</h5>
                            <ul class="mb-0">
                                @foreach (var error in errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-action="Index" class="btn btn-primary">返回產品列表</a>
                        <a asp-action="ImportFromExcel" class="btn btn-secondary">再次匯入</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

