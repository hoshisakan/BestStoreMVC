@{
    ViewData["Title"] = "Import Products from Excel";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Import Products from Excel</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5>Excel 檔案格式說明：</h5>
                        <ul>
                            <li>第一行必須為標題列：Name, Brand, Category, Price, Description, Image File Name</li>
                            <li>從第二行開始為產品資料</li>
                            <li>必填欄位：Name, Brand, Category, Price</li>
                            <li>Price 必須為數字且大於 0</li>
                            <li>支援的檔案格式：.xlsx, .xls</li>
                        </ul>
                        <div class="mt-3">
                            <a asp-action="DownloadTemplate" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-download"></i> 下載 Excel 範本
                            </a>
                        </div>
                    </div>

                    <form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label for="file" class="form-label">選擇 Excel 檔案</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".xlsx,.xls" required />
                            <div class="form-text">請選擇要匯入的 Excel 檔案</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">返回產品列表</a>
                            <button type="submit" class="btn btn-primary">開始匯入</button>
                        </div>
                    </form>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
